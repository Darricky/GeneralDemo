<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/marign_large"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/item_title_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textSize="@dimen/size_middle"
            android:textColor="@color/text_font_black"
            android:textColorHint="@color/hint_gray"
            android:hint="如:黑色,XXL"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_line_color"
            />
        <EditText
            android:id="@+id/item_price_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:textSize="@dimen/size_middle"
            android:textColor="@color/text_font_black"
            android:textColorHint="@color/hint_gray"
            android:hint="如:100"
            />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/divider_line_color"
            />
        <EditText
            android:id="@+id/item_rest_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="number"
            android:textSize="@dimen/size_middle"
            android:textColor="@color/text_font_black"
            android:textColorHint="@color/hint_gray"
            android:hint="如:100"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/good_release_divider_height"
        android:background="@color/divider_line_color"
        />

</LinearLayout>