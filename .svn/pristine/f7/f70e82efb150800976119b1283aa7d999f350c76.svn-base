<?xml version="1.0" encoding="utf-8"?>
<com.techfly.demo.selfview.photepicker.widget.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3.5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_def_photo" />

    <ImageView
        android:id="@+id/v_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dip"
        android:clickable="true"
        android:padding="5dip"
        android:src="@drawable/photo_checkbox_bg" />

</com.techfly.demo.selfview.photepicker.widget.SquareItemLayout>