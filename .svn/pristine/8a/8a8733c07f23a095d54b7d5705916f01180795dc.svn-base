<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/top_title"
        layout="@layout/activity_base_top_bar"
        android:layout_width="match_parent"
        android:layout_height="42dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/marign_middle"
        >

        <EditText
            android:id="@+id/et_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/marign_normal"
            android:background="@color/yellow"
            android:hint="输入名字" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marign_normal"
            android:layout_marginBottom="@dimen/marign_normal"
            android:text="点击显示名字按钮,在没有修复前,点击该按钮,app会crash,修复后不会crash" />

        <Button
            android:id="@+id/btn_show_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="显示名字new" />

        <Button
            android:id="@+id/btn_load_patch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="加载patch" />

        <Button
            android:id="@+id/btn_remove_patch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="移除patch" />

    </LinearLayout>


</LinearLayout>