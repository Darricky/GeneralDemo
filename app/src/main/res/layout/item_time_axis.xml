<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <RelativeLayout
            android:id="@+id/axis_right_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marign_larger"
            android:layout_marginRight="@dimen/marign_normal"
            android:layout_marginTop="@dimen/marign_middle"
            >
            <TextView
                android:id="@+id/axis_descrip_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="安徽芜湖到达安徽芜湖到达安徽芜湖"
                android:textColor="@color/text_font_gray_light"
                android:textSize="@dimen/size_big" />
            <TextView
                android:id="@+id/axis_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/axis_descrip_tv"
                android:layout_marginTop="@dimen/marign_middle"
                android:text="2016年2月26日 18:00-20:00"
                android:textColor="@color/text_font_gray_light"
                android:textSize="@dimen/size_big" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/axis_left_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/marign_bigger"
            android:layout_alignBottom="@+id/axis_bottom_view"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            >
            <View
                android:id="@+id/axis_left_top_view"
                android:layout_width="1dp"
                android:layout_height="@dimen/marign_boundary"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:background="@color/divider_line_color"
                android:visibility="visible"
                />

            <TextView
                android:id="@+id/axis_left_point_tv"
                android:layout_width="@dimen/marign_middle"
                android:layout_height="@dimen/marign_middle"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/axis_left_top_view"
                android:background="@drawable/shape_circle_solid_gray_point"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/size_middle"
                />

            <TextView
                android:id="@+id/axis_left_bottom_view"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/axis_left_point_tv"
                android:layout_centerHorizontal="true"
                android:background="@color/divider_line_color"
                />
        </RelativeLayout>

        <View
            android:id="@+id/axis_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/axis_right_rl"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="@dimen/marign_bigger"
            android:layout_marginTop="@dimen/marign_middle"
            android:background="@color/divider_line_color"
            android:visibility="visible"
            />

    </RelativeLayout>


</LinearLayout>