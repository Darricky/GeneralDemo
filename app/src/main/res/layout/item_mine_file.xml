<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:id="@+id/file_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/marign_boundary"
        android:paddingRight="@dimen/marign_boundary"
        android:paddingTop="@dimen/marign_middle"
        android:paddingBottom="@dimen/marign_middle"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/file_picIv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_calendar"
            />

        <TextView
            android:id="@+id/file_dateTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marign_middle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/file_picIv"
            android:layout_gravity="center"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/text_font_black"
            android:textSize="@dimen/size_big"
            android:text="2015/10/08 12:52"
            />

        <ImageView
            android:id="@+id/file_dropIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:paddingTop="@dimen/marign_middle"
            android:paddingBottom="@dimen/marign_middle"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/icon_arrow_down"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_line_color"
        />

    <LinearLayout
        android:id="@+id/file_detail_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/main_gray"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/main_gray"
            android:layout_marginTop="@dimen/marign_boundary"
            android:layout_marginLeft="@dimen/marign_boundary"
            android:layout_marginBottom="@dimen/marign_boundary"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_font_black"
                android:textSize="@dimen/size_big"
                android:text="左眼"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marign_middle"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="裸眼视力:  "
                        />
                    <TextView
                        android:id="@+id/left_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="0.15"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="矫正视力:  "
                        />
                    <TextView
                        android:id="@+id/left_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="0.15"
                        />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marign_middle"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="屈  光  度:  "
                        />
                    <TextView
                        android:id="@+id/left_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="+10"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="散光度数:  "
                        />
                    <TextView
                        android:id="@+id/left_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="0.1"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marign_middle"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="闪光度数:  "
                        />
                    <TextView
                        android:id="@+id/left_tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="100度以下"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="裸眼视力: "
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="0.15"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/main_gray"
            android:layout_marginLeft="@dimen/marign_boundary"
            android:layout_marginBottom="@dimen/marign_boundary"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_font_black"
                android:textSize="@dimen/size_big"
                android:text="右眼"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marign_middle"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="裸眼视力:  "
                        />
                    <TextView
                        android:id="@+id/right_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="0.15"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="矫正视力:  "
                        />
                    <TextView
                        android:id="@+id/right_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="0.15"
                        />
                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marign_middle"
                android:orientation="horizontal"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="屈  光  度:  "
                        />
                    <TextView
                        android:id="@+id/right_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="+10"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="散光度数:  "
                        />
                    <TextView
                        android:id="@+id/right_tv4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="0.2"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marign_middle"
                android:orientation="horizontal"
                android:visibility="gone"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="闪光读书:  "
                        />
                    <TextView
                        android:id="@+id/right_tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="100度以下"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    >
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_font_gray"
                        android:textSize="@dimen/size_middle"
                        android:text="裸眼视力: "
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_font_black_light"
                        android:textSize="@dimen/size_middle"
                        android:text="0.15"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>