<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/top_title"
        layout="@layout/activity_base_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@string/activity_title_weight" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/divider_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@string/activity_body_weight"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/blue"
            >
            <TextView
                android:id="@+id/item1_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/size_middle"
                android:textColor="@color/white"
                android:text="编号"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line_color"
                />
            <TextView
                android:id="@+id/item2_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/size_middle"
                android:textColor="@color/white"
                android:text="日期"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line_color"
                />
            <TextView
                android:id="@+id/item3_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/size_middle"
                android:textColor="@color/white"
                android:text="状态"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line_color"
                />
            <TextView
                android:id="@+id/item4_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/size_middle"
                android:textColor="@color/white"
                android:text="编码"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line_color"
                />
            <TextView
                android:id="@+id/item5_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/size_middle"
                android:textColor="@color/white"
                android:text="科目"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line_color"
                />
            <TextView
                android:id="@+id/item6_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/size_middle"
                android:textColor="@color/white"
                android:text="名称"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line_color"
                />
            <TextView
                android:id="@+id/item7_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/size_middle"
                android:textColor="@color/white"
                android:text="规格"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line_color"
                />
            <TextView
                android:id="@+id/item8_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/size_middle"
                android:textColor="@color/white"
                android:text="单位"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line_color"
                />
            <TextView
                android:id="@+id/item9_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/size_middle"
                android:textColor="@color/white"
                android:text="单价"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/divider_line_color"
                />
            <TextView
                android:id="@+id/item10_tv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/size_middle"
                android:textColor="@color/white"
                android:text="数量"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            >

            <com.handmark.pulltorefresh.library.PullToRefreshHorizontalScrollView
                android:id="@+id/base_phs"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:dividerHeight="0dp">
                <android.support.v7.widget.RecyclerView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/base_rv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_empty="@layout/view_empty"
                    app:layout_moreProgress="@layout/view_more_progress"
                    app:recyclerClipToPadding="false"
                    />
            </com.handmark.pulltorefresh.library.PullToRefreshHorizontalScrollView>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>