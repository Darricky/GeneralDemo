<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal"
        >

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/text_font_black_light"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center|left"
            android:paddingLeft="@dimen/marign_middle"
            android:text="番茄"
            android:textColor="@color/text_font_black"
            android:textSize="@dimen/size_middle" />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/text_font_black_light"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|right"
            android:paddingRight="@dimen/marign_middle"
            android:text="2"
            android:textColor="@color/text_font_black"
            android:textSize="@dimen/size_middle" />



        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/text_font_black_light"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_font_black"
            android:textSize="@dimen/size_small"
            android:visibility="gone"
            />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/text_font_black_light"
            android:visibility="gone"
            />

        <View
            android:layout_width="0.2dp"
            android:layout_height="match_parent"
            android:background="@color/text_font_black_light"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/item_tv4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textColor="@color/text_font_black"
            android:textSize="@dimen/size_small"
            android:visibility="gone"
            />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/text_font_black_light"

        />

</LinearLayout>
