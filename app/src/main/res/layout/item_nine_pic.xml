<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/marign_middle"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_avator_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_customer_info"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/orange"
            />
        
        <ImageView
            android:id="@+id/item_avator_type_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/item_avator_iv"
            android:layout_alignRight="@+id/item_avator_iv"
            android:scaleType="fitXY"
            android:src="@drawable/icon_v_yellow"
            />

        <TextView
            android:id="@+id/item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_avator_iv"
            android:layout_marginTop="@dimen/marign_mini"
            android:layout_toRightOf="@+id/item_avator_iv"
            android:layout_marginLeft="@dimen/marign_big"
            android:textSize="@dimen/size_middle"
            android:textColor="@color/orange"
            android:text="孙红雷"
            />

        <TextView
            android:id="@+id/item_sub_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_avator_type_iv"
            android:layout_marginBottom="@dimen/marign_mini"
            android:layout_toRightOf="@+id/item_avator_iv"
            android:layout_marginLeft="@dimen/marign_big"
            android:textSize="@dimen/size_smaller"
            android:textColor="@color/text_font_gray"
            android:text="昨天 15:20 来自努比亚z9"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/item_content_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="@dimen/marign_mini"
        android:layout_marginLeft="@dimen/marign_middle"
        android:layout_marginRight="@dimen/marign_middle"
        android:layout_marginBottom="@dimen/marign_middle"
        android:textSize="@dimen/size_middle"
        android:textColor="@color/text_font_black"
        android:text="你好好打扫费后对方说安徽度搜发哦"
        />

    <com.techfly.demo.selfview.richeditor.RichTextEditor
        android:id="@+id/item_content_ret"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marign_middle"
        android:layout_marginRight="@dimen/marign_middle"
        android:layout_marginBottom="@dimen/marign_middle"
        android:textSize="@dimen/size_middle"
        android:textColor="@color/text_font_black"
        android:textColorHint="@color/text_font_gray_light"
        />

    <!--<com.jaeger.ninegridimageview.NineGridImageView
        android:id="@+id/item_grid_pic_niv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marign_middle"
        android:layout_marginRight="@dimen/marign_middle"
        android:layout_marginBottom="@dimen/marign_middle"
        app:imgGap="4dp"
        app:showStyle="fill"
        app:singleImgSize="120dp"/>-->

    <com.jaeger.ninegridimageview.NineGridImageView
        android:id="@+id/item_grid_pic_niv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marign_middle"
        android:layout_marginRight="@dimen/marign_middle"
        android:layout_marginBottom="@dimen/marign_middle"
        app:imgGap="4dp"
        app:maxSize="-1"
        app:showStyle="grid"
        app:singleImgSize="500dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/marign_middle"
        android:background="@color/main_gray"
        />

  
</LinearLayout>
